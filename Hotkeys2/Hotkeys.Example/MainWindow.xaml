<Window x:Class="Hotkeys.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotkeys.Example"
        mc:Ignorable="d"
        Title="Hotkeys.Example" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <StackPanel Width="300" Margin="10">
		<Button x:Name="AddHotkeyButton" Content="Add Hotkey"/>
		<Label x:Name="HeardHotkeyLabel" Content=""/>
		<GroupBox Header="Registered Hotkeys">
			<StackPanel>
				<Label Content="Double click item to remove"/>
				<ListBox x:Name="HotkeysListBox" MinHeight="100"/>
			</StackPanel>
		</GroupBox>
	</StackPanel>
</Window>
